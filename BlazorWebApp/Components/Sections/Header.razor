<AuthorizeView>
    <Authorized>
        <header>
            <div class="container">
                <NavLink class="logo logo-light" href="/"> <img src="/images/icons/solid.svg" alt="logotype"></NavLink>
                <a class="logo logo-dark" asp-controller="Home" asp-action="Index"> <img src="~/images/icons/solid-blacktheme.svg" alt="logotype"></a>
                <div id="menu">
                    <nav>
                        <NavLink class="menu-link" href="/">Overview</NavLink>
                        <NavLink class="menu-link" href="#features">Features</NavLink>
                        <NavLink class="menu-link" href="/Courses">Courses</NavLink>
                        <NavLink class="menu-link" href="/contact">Contact</NavLink>
                    </nav>
                </div>
                <NavLink class="btn-theme signout" href="/Account/SignOut"><i class="fa-solid fa-arrow-right-from-bracket"></i>Sign Out</NavLink>
                <div class="little-box" id="little-box">
                    <i class="fa-solid fa-bars"></i>
                </div>
                
                <div class="account-button">
                   <a href="/Account/Manage"><img src="/images/icons/profile.svg" alt=""></a>
                </div>
            </div>
            
            <div class="menu-bar" id="menu-bar">
                <NavLink href="#showcase">Overview</NavLink>
                <NavLink href="#features">Features</NavLink>
                <NavLink href="/contact">Contact</NavLink>
                <NavLink href="/account/Messages">Messages</NavLink>            
                <NavLink href="/Account/SignOut">Sign Out</NavLink>
            </div>
           
          
        </header>
    </Authorized>

    <NotAuthorized>
        <header>
            <div class="container">
                <NavLink class="logo logo-light" href="/"> <img src="/images/icons/solid.svg" alt="logotype"></NavLink>
                <NavLink class="logo logo-dark" href="/"> <img src="/images/icons/solid-blacktheme.svg" alt="logotype"></NavLink>
                <div id="menu">
                    <nav>
                        <NavLink class="menu-link" href="#showcase">Overview</NavLink>
                        <NavLink class="menu-link" href="#features">Features</NavLink>
                        <NavLink class="menu-link" href="/contact">Contact</NavLink>
                    </nav>
                </div>
                

                <div class="mobile-meny">
                    <NavLink class="btn-gray" href="/signin"><span>Sign in</span></NavLink>
                    <NavLink class="btn-theme" href="/signup"><span>Sign up</span></NavLink>
                </div>

                <div class="account-buttons">
                    <NavLink class="btn-gray" href="/signin"> <i class="fa-regular fa-right-to-bracket"></i><span>Sign In</span></NavLink>
                    <NavLink class="btn-theme" href="/signup"> <i class="fa-regular fa-user"></i><span>Sign Up</span></NavLink>
                </div>
            </div>
        </header>

    </NotAuthorized>
</AuthorizeView>


